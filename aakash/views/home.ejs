/* GENERAL STYLING */

*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html{
  font: normal 16px Comfortaa;
  color: #555;
}

ul, nav{
  list-style: none;
}

a{
  color: #fff;
  text-decoration: none!important;
  opacity: 0.75;
}

a:hover{
  opacity: 1;
  color: #000;
  text-decoration: underline;
}

a.btn{
  border-radius: 4px;
  text-transform: uppercase;
  font-weight: 700;
  text-align: center;
  background-color: #3f51b5;
  opacity: 1;
}

section{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100px 80px;
  justify-content: center;
}

section:not(.mainbody):nth-child(even){
  background-color: #f5f5f5;
}

.grid{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

hr{
  width: 250px;
  height: 3px;
  background-color: #3f51b5;
  border: 0;
  margin-bottom: 50px;
}

section h3.title{
  text-transform: capitalize;
  font: 700 32px Comfortaa;
  margin-bottom: 30px;
  text-align: center;
}

section p{
  max-width: 775px;
  line-height: 2;
  padding: 0 20px;
  margin-bottom: 30px;
  text-align: center;
}

/* HEADER STYLING */

header{
  color: #fff;
  position: absolute;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35px 100px 0;
  animation: 1s fadein 0.5s forwards;
  opacity: 0;
}

@keyframes fadein {
  100%{
    opacity: 1;
  }
}

header h2{
  font-family: Comfortaa;
}

header nav{
  display: flex;
  margin-right: -15px;
}

header nav li{
  margin: 0 15px;
}

/* mainbody styling */

.mainbody{
  color: #fff;
  /* position: relative; */
  justify-content: center;
  text-align: center;
  min-height: 100vh;
}

.mainbody .background-image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  z-index: -1;
  background-color: #80a3db;
}

.job-content .background-image{

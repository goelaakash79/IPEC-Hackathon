  font-weight: 400;
  line-height: 1.5;
  margin: 40px 0 25px;
}

/* footer section */

footer{
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: rgb(20,20,20);
  color: #fff;
  padding: 8px 0;
}

footer ul{
  display: flex;
}

footer ul li{
  margin-left: 16px;
}

footer p{
  /* text-transform: uppercase; */
